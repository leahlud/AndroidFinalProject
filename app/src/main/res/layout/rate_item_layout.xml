<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/baseColor_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rate_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/place_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto"
        android:textColor="#636363"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/baseColor_textView"
        app:layout_constraintStart_toStartOf="@+id/baseColor_textView"
        app:layout_constraintTop_toTopOf="@+id/baseColor_textView" />

    <TextView
        android:id="@+id/ratePetName_textView"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/fredoka_one"
        android:textColor="#3E3E3E"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/rateUserTag_textView"
        app:layout_constraintEnd_toStartOf="@+id/rateItemPet_imageView"
        app:layout_constraintStart_toEndOf="@+id/place_textView"
        app:layout_constraintTop_toTopOf="@+id/rateItemPet_imageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/rateUserTag_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/gudea"
        android:textColor="#5E5E5E"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rateItemPet_imageView"
        app:layout_constraintEnd_toEndOf="@+id/ratePetName_textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ratePetName_textView"
        app:layout_constraintTop_toBottomOf="@+id/ratePetName_textView" />

    <ImageView
        android:id="@+id/rateItemPet_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/baseColor_textView"
        app:layout_constraintEnd_toStartOf="@+id/rateFur_imageView"
        app:layout_constraintTop_toTopOf="@+id/baseColor_textView"
        tools:srcCompat="@drawable/test" />

    <ImageView
        android:id="@+id/rateFur_imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/rateCollar_imageView"
        app:layout_constraintEnd_toStartOf="@+id/goRate_textView"
        app:layout_constraintTop_toTopOf="@+id/rateItemPet_imageView"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/black" />

    <ImageView
        android:id="@+id/rateFur_imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/rateFur_imageView"
        app:layout_constraintStart_toEndOf="@+id/rateItemPet_imageView"
        app:layout_constraintStart_toStartOf="@+id/rateFur_imageView"
        app:layout_constraintTop_toTopOf="@+id/rateFur_imageView"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ring" />

    <TextView
        android:id="@+id/rateFur_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/fur"
        android:textColor="#3E3E3E"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/rateFur_imageView"
        app:layout_constraintStart_toEndOf="@+id/rateFur_imageView" />

    <ImageView
        android:id="@+id/rateCollar_imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintBottom_toBottomOf="@+id/rateItemPet_imageView"
        app:layout_constraintEnd_toStartOf="@+id/goRate_textView"
        app:layout_constraintTop_toBottomOf="@+id/rateFur_imageView"
        app:srcCompat="@drawable/black" />

    <ImageView
        android:id="@+id/rateCollar_imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/rateCollar_imageView"
        app:layout_constraintStart_toEndOf="@+id/rateItemPet_imageView"
        app:layout_constraintStart_toStartOf="@+id/rateCollar_imageView"
        app:layout_constraintTop_toTopOf="@+id/rateCollar_imageView"
        app:srcCompat="@drawable/ring" />

    <TextView
        android:id="@+id/rateCollar_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/collar"
        android:textColor="#3E3E3E"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/rateCollar_imageView"
        app:layout_constraintStart_toEndOf="@+id/rateCollar_imageView" />

    <TextView
        android:id="@+id/goRate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rate_button"
        android:fontFamily="@font/fredoka_one"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:text="@string/rate"
        android:textColor="#FFA3BE"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/baseColor_textView"
        app:layout_constraintEnd_toEndOf="@+id/baseColor_textView"
        app:layout_constraintTop_toTopOf="@+id/baseColor_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>