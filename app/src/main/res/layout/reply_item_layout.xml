<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/replyBase_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/reply_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/replyUser_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gudea"
        android:textColor="#252525"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/replyBase_textView"
        app:layout_constraintTop_toTopOf="@+id/replyBase_textView" />

    <TextView
        android:id="@+id/replyTimestamp_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:textAllCaps="false"
        android:textColor="#3A3A3A"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/replyBase_textView" />

    <TextView
        android:id="@+id/replyMessage_textView"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/gudea"
        android:textColor="#616161"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/replyBase_textView"
        app:layout_constraintStart_toStartOf="@+id/replyUser_textView"
        app:layout_constraintTop_toBottomOf="@+id/replyUser_textView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/pfp_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/below_arrow" />

    <ImageView
        android:id="@+id/pfp_imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="115dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_cat_green_pfp" />

    <ImageView
        android:id="@+id/pfp_imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="115dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline" />

    <TextView
        android:id="@+id/deleteReply_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/gudea"
        android:text="@string/delete"
        android:textColor="#F68BA0"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/garbage_imageView2"
        app:layout_constraintEnd_toStartOf="@+id/garbage_imageView2"
        app:layout_constraintTop_toTopOf="@+id/garbage_imageView2" />

    <ImageView
        android:id="@+id/garbage_imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/replyMessage_textView"
        app:srcCompat="@drawable/garbage" />

</androidx.constraintlayout.widget.ConstraintLayout>