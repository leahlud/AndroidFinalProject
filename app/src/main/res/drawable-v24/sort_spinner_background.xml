<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#93848D"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="8dp">
        <layer-list>
            <item android:width="7dp" android:height="7dp"  android:gravity="center" android:bottom="10dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#594D54" />
                        <stroke android:color="#594D54" android:width="0.5dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="15dp" android:height="10dp" android:bottom="18dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#93848D"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>